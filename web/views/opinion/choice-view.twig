{% for picture in opinion.pictureList %}
    <img src="{{ app.request.basepath }}/pictures/{{ picture.filepath }}" width="100" />
    {% if opinionToAnswer.answer is null %}
        <a href="{{ url('answer', {'opinionAnswerId':opinionToAnswer.id, 'answer':picture.id}) }} ">Choose this one ?</a>
    {% elseif opinionToAnswer.answer == picture.id %}
        You successfully chose this one :)
    {% endif %}
     <br/>
{% endfor %}
